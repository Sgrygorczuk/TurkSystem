
class Team():
    
    def __init__(self, is_team = True, id = 0, name = "", avg_grade = 0, image = "Team.png", team_member_id_list = [], team_admin_id_list = [], 
                 project_id_list = []):
        self.is_team = is_team
        self.id = id
        self.name = name
        self.avg_grade = avg_grade
        self.image = image
        #Team members are everyone in the team 
        self.team_member_id_list = team_member_id_list
        #Team admins are member who have admin privlages 
        self.team_admin_id_list = team_admin_id_list
        self.project_id_list = project_id_list
        
        self.dictonary = {"id" : self.id, "name" : self.name, "is_team" : self.is_team, "avg_grade" : self.avg_grade, "image" : self.image, 
                          "team_member_id_list" : self.team_member_id_list, "team_admin_id_list" : self.team_admin_id_list, 
                          "project_id_list" : self.project_id_list}
        
    def create_new_team(self, team_name, user_id):
        #Check if the user who is trying to create the team is part of a team (check team_member attribute in user)
        #Check if the name the user wants to use is already taken 
        if(self.team_name_check()):
            print("Enter a new name")
        else:
            self.name = team_name
        self.set_id(self.generate_new_id())
    
    def team_name_check(self):  
    #This method would look through the database and check for aviablaibity of the name 
        if(0 == 0):
            return True
        return False
    
    def generate_new_id(self):
        #Looks for a avlibale id and makes a new one for the new team 
        id = 0
        return id

    def get_id(self):
        return self.id
    
    def set_id(self, new_id):
        self.id = new_id
        self.dictonary["id"] = new_id
        
    def get_name(self):
        return self.name
    
    def get_team(self):
        return self.name
    
    def set_name(self, new_name):
        self.name = new_name
        self.dictonary["name"] = new_name
        
    def get_avg_grade(self):
        return self.avg_grade
    
    def set_avg_grade(self, new_avg_grade):
        #This will be removed once a database is placed in and no one should be able to do something like that 
        self.avg_grade = new_avg_grade
        self.dictonary["avg_grade"] = new_avg_grade
    
    def get_image(self):
        return self.image
    
    def set_image(self,new_image):
        self.image = new_image
        self.dictonary["image"] = new_image
    
    def get_team_member_amount(self):
        return len(self.team_member_id_list)
    
    def add_memeber(self, new_member_id):
        self.team_member_id_list.append(new_member_id)
        
    def get_projects_amount(self):
        return len(self.project_id_list)
    
    def add_project(self, new_project_id):
        self.project_id_list.append(new_project_id)
        self.dictonary["project_id_list"] = self.project_id_list
        
    def get_team_member(self):
        return self.is_team
    
    def get_dictonary(self):
        return self.dictonary